FROM rockylinux:9

RUN echo fastestmirror=1 >> /etc/dnf/dnf.conf
RUN dnf clean all
RUN dnf install -y epel-release
RUN dnf install -y rpm-build rpm-devel rpmlint make python3 bash diffutils patch rpmdevtools m4 tar xz git which make gcc gcc-c++ fuse* gmp-devel ncurses-devel sqlite-devel re2-devel squashfuse
RUN rpmdev-setuptree

WORKDIR /build
