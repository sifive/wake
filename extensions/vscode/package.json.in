{
  "name": "wake",
  "displayName": "Wake",
  "description": "A language server for the SiFive wake build tool",
  "icon": "images/sifive_icon.png",
  "author": "SiFive",
  "license": "Apache-2.0",
  "version": "@VERSION@",
  "repository": {
    "type": "git",
    "url": "https://github.com/sifive/wake.git"
  },
  "bugs": {
    "url": "https://github.com/sifive/wake/issues"
  },
  "publisher": "SiFive",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "wake",
    "build tool",
    "sifive"
  ],
  "activationEvents": [
    "onLanguage:wake"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "id": "wakeLanguageServer",
      "title": "Wake",
      "type": "object",
      "properties": {
        "wakeLanguageServer.standardLibrary": {
          "default": null,
          "description": "The path to the wake standard library. By default the version bundled with wake is used.",
          "scope": "window",
          "type": "string"
        },
        "wakeLanguageServer.path": {
          "default": null,
          "description": "The path to the wake binary. Required for the LSP to function correctly.",
          "scope": "window",
          "type": "string"
        },
        "wakeLanguageServer.trace.server": {
          "default": "off",
          "description": "Traces the communication between VS Code and the language server.",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "scope": "window",
          "type": "string"
        }
      }
    },
    "grammars": [
      {
        "language": "wake",
        "path": "./syntaxes/wake.tmLanguage.json",
        "scopeName": "source.wake"
      }
    ],
    "languages": [
      {
        "aliases": [
          "wake"
        ],
        "configuration": "./language-configuration.json",
        "extensions": [
          ".wake"
        ],
        "id": "wake"
      }
    ]
  },
  "scripts": {
    "compile": "npm run check-types && node esbuild.js",
    "check-types": "tsc --noEmit",
    "vscode:prepublish": "npm run package",
    "package": "npm run check-types && node esbuild.js --production",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.92.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "esbuild": "^0.23.0",
    "vscode-languageclient": "^9.0.1"
  }
}
