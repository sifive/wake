{
    "activationEvents": [
        "onLanguage:plaintext",
        "onCommand:timeline.create",
		"onCommand:timeline.refresh",
		"onWebviewPanel:timeline"
    ],
    "author": "SiFive",
    "contributes": {
        "configuration": {
            "properties": {
                "wakeLanguageServer.pathToWakeStandardLibrary": {
                    "default": "",
                    "description": "The path to the wake standard library that will be used by the server. If left blank, the library that comes with the extension is used.",
                    "scope": "window",
                    "type": "string"
                },
                "wakeLanguageServer.maxNumberOfProblems": {
                    "default": 100,
                    "description": "Controls the maximum number of problems produced by the server.",
                    "scope": "resource",
                    "type": "number"
                },
                "wakeLanguageServer.trace.server": {
                    "default": "off",
                    "description": "Traces the communication between VS Code and the language server.",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "scope": "window",
                    "type": "string"
                }
            },
            "title": "Wake",
            "type": "object"
        },
        "grammars": [
            {
                "language": "wake",
                "path": "./syntaxes/wake.tmLanguage.json",
                "scopeName": "source.wake"
            }
        ],
        "languages": [
            {
                "aliases": [
                    "wake",
                    "wake"
                ],
                "configuration": "./language-configuration.json",
                "extensions": [
                    ".wake"
                ],
                "id": "wake"
            }
        ],
        "commands": [
			{
				"command": "timeline.create",
				"title": "Create",
				"category": "Timeline"
			},
			{
				"command": "timeline.refresh",
				"title": "Refresh",
				"category": "Timeline"
			}
		]
    },
    "dependencies": {
        "vscode-languageclient": "^7.0.0"
    },
    "devDependencies": {
        "@types/node": "^15.14.9",
        "@types/vscode": "^1.52.0",
        "eslint": "^7.32.0",
        "typescript": "^4.4.4",
        "sqlite3": "^5.0.2"
    },
    "license": "Apache-2.0",
    "main": "./lsp-client/out/extension",
    "name": "wake",
    "version": "@VERSION@",
    "publisher": "SiFive",
    "engines": {
        "vscode": "^1.52.0"
    },
    "displayName": "Wake",
    "description": "A language server for the SiFive wake build tool",
    "categories": [
        "Programming Languages"
    ],
    "keywords": [
        "wake",
        "build tool",
        "sifive"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/sifive/wake.git"
    },
    "bugs": {
        "url": "https://github.com/sifive/wake/issues"
    },
    "scripts": {
        "compile": "tsc -b",
        "vscode:prepublish": "npm run compile",
        "watch": "tsc -b -w"
    },
    "icon": "images/sifive_icon.png"
}
