package build_wake
from wake import _
from gcc_wake import _

# Prefer to use system utf8proc if available
def utf8proc variant = match (pkgConfig "utf8proc")
  Some x = x
  None   =
    def cflags = "-I{here}", Nil
    def headers = source "{here}/utf8proc_data.c", sources here `.*\.h`
    def compile x = compileC variant cflags headers (source "{here}/{x}")
    def objects = ("utf8proc.c", Nil) | map compile
    SysLib "2.2.0" headers objects cflags Nil
