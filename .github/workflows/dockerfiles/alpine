FROM alpine:3.14.0

RUN apk add m4 g++ make pkgconf git tar xz gmp-dev re2-dev sqlite-dev fuse-dev ncurses-dev dash sqlite-static ncurses-static linux-headers curl

WORKDIR /build

ENV RUST_FOLDER="rust-$VERSION-x86_64-unknown-linux-gnu"
ENV RUST_TAR="$RUST_FOLDER.tar.gz"
RUN wget "https://static.rust-lang.org/dist/$RUST_TAR"
RUN tar -xf $RUST_TAR
RUN ./$RUST_FOLDER/install.sh --verbose

RUN wget https://github.com/libfuse/libfuse/releases/download/fuse-2.9.9/fuse-2.9.9.tar.gz
RUN tar xvzf fuse-2.9.9.tar.gz
RUN cd fuse-2.9.9 && ./configure && make && cp lib/.libs/libfuse.a /usr/lib
